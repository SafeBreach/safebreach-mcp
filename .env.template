# SafeBreach MCP Environment Variables Template
# Copy this file to .env and fill in your actual values

# SafeBreach API Tokens (DO NOT commit real tokens!)
CONSOLE_A_APITOKEN=your-console-a-token-here
CONSOLE_B_APITOKEN=your-console-b-token-here
CONSOLE_C_APITOKEN=your-console-c-token-here
CONSOLE_D_APITOKEN=your-console-d-token-here

# MCP Server Configuration
SAFEBREACH_MCP_AUTH_TOKEN=your-mcp-auth-token-here

# Environment Configuration (choose one method)
SAFEBREACH_ENVS_FILE=path/to/your/environments.json
# OR basic configuration
SAFEBREACH_LOCAL_ENV={"console-name": {"url": "console.safebreach.com", "account": "1234567890", "secret_config": {"provider": "env_var", "parameter_name": "console_name_apitoken"}}}
# OR with per-service URLs (NEW)
SAFEBREACH_LOCAL_ENV={"microservices-console": {"url": "default.safebreach.com", "urls": {"config": "config-api.safebreach.com", "data": "data-api.safebreach.com", "playbook": "playbook-api.safebreach.com"}, "account": "1234567890", "secret_config": {"provider": "env_var", "parameter_name": "microservices_console_apitoken"}}}

# External Access (optional)
SAFEBREACH_MCP_ALLOW_EXTERNAL=false
SAFEBREACH_MCP_BIND_HOST=127.0.0.1

# AWS Configuration (if using AWS secrets)
AWS_REGION=us-east-1
AWS_PROFILE=default